# =============================================================================
# LoadMaster Pro - Environment Configuration
# =============================================================================
# Copy this file to .env.local for local development
# NEVER commit .env.local to version control
# =============================================================================

# Application Mode
VITE_APP_ENV=development
VITE_DEBUG_MODE=true
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=https://api.example.com
VITE_API_TIMEOUT=30000
VITE_OFFLINE_ENABLED=true

# Sync Configuration
VITE_SYNC_INTERVAL_MINUTES=15
VITE_AUTO_SYNC_ON_START=true
VITE_SYNC_MAX_RETRIES=3

# Database
VITE_DB_NAME=loadmaster
VITE_DB_LOGGING=false

# Features
VITE_FEATURE_AI_AUTOLOAD=true
VITE_FEATURE_NOTOC=true
VITE_FEATURE_TRANSMIT=true
VITE_FEATURE_DG_HANDLING=true

# Operator
VITE_DEFAULT_OPERATOR=WGA
VITE_MULTI_TENANT=false

# Compliance
VITE_AUDIT_LOGGING=true
VITE_AUDIT_RETENTION_DAYS=365
VITE_CALCULATION_VERIFICATION=true
